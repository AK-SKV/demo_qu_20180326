<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="helpdesk_stage_view_tree_ext" model="ir.ui.view">
        <field name="name">Extended Helpdesk Stage Tree</field>
        <field name="model">helpdesk.stage</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_stage_view_tree"/>
        <field name="arch" type="xml">
            <field name="is_close" position="after">
                <field name="default_stage"/>
            </field>
        </field>
    </record>

    <record id="helpdesk_stage_view_form_ext" model="ir.ui.view">
        <field name="name">Extended Helpdesk Stage Form</field>
        <field name="model">helpdesk.stage</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_stage_view_form"/>
        <field name="arch" type="xml">
            <field name="fold" position="after">
                <field name="default_stage"/>
            </field>
        </field>
    </record>

</odoo>
