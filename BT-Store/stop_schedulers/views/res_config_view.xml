<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_action_ir_cron_settings" model="ir.ui.view">
            <field name="name">Stop Schedulers Settings</field>
            <field name="model">base.config.settings</field>
            <field name="inherit_id" ref="base_setup.view_general_configuration" />
            <field name="arch" type="xml">
                <xpath expr="//group[descendant-or-self::group[@name='google']]" position="before">
                    <group string="Stop Schedulers Configuration" name="stop_configuration">
                        <field name="stop_schedulers_criteria"/>
                        <field name="stop_schedulers_until"
                               attrs="{'invisible': [('stop_schedulers_criteria','!=','yes_until')]}"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
