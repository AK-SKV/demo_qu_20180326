<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="notification_message_preview_form_view" model="ir.ui.view">
            <field name="name">notification_message_preview_form_view</field>
            <field name="model">alarm.notification.message.preview</field>
            <field name="arch" type="xml">
                <form edit="false">
                    <group col="4">
                        <field name="model_to_preview" invisible="1"/>
                        <field name="notification_message" invisible="1"/>

                        <field name="res_id_to_preview" colspan="4"/>
                        <field name="preview" widget="html" colspan="4"/>
                    </group>
                    <footer>
                        <button special="cancel" class="oe_highlight" string="Close"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
