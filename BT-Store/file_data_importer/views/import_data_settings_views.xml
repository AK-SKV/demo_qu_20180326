<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="import_data_settings_view_form" model="ir.ui.view">
            <field name="name">Import Data Settings Form</field>
            <field name="model">import.data.settings</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="import_button" string="Import" type="object" class="oe_highlight"
                                attrs="{'invisible': [('id', '=', False)]}" />
                        <field name="id" invisible="1"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="Import Info">
                                <field name="description"/>
                                <field name="import_type" required="1"/>
                                <field name="row_limit" required="1"/>
                                <field name="total_of_columns" required="1"/>
                            </group>
                            <group string="File Parameters">
                                <field name="content_filename" invisible="True" />
                                <field name="content" required="True" filename="content_filename"/>
                                <field name="start_row"/>
                                <field name="delimiter" attrs="{'invisible': [('import_type', 'in', ('xls', ))]}" />
                                <field name="quotation" attrs="{'invisible': [('import_type', 'in', ('xls',))]}" />
                            </group>
                            <group string="Process Status">
                                <field name="updated" readonly="True"/>
                                <field name="created" readonly="True"/>
                                <field name="total" readonly="True"/>
                                <field name="import_by" readonly="True"/>
                                <field name="import_date" readonly="True"/>
                            </group>
                            <group colspan="4" string="Objects To Import">
                                <field name="object_ids" nolabel="1"/>
                            </group>
                            <group string="Result Of Process"
                                   attrs="{'invisible': [('import_data_message_ids', '=', False)]}"
                                   colspam="4">
                                   attrs="{'invisible': [('import_data_message_ids', '=', False)]}">
                                <field name="import_data_message_ids" nolabel="1">
                                        <tree>
                                            <field name="message"/>
                                        </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="import_data_settings_view_tree" model="ir.ui.view">
            <field name="name">Import Data Settings Tree</field>
            <field name="model">import.data.settings</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="description"/>
                    <field name="import_type"/>
                </tree>
            </field>
        </record>

        <record id="action_file_data_import_settings" model="ir.actions.act_window">
            <field name="name">File Data Import Objects</field>
            <field name="res_model">import.data.settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <menuitem name="File Data Importer"
            id="file_data_importer.menu_settings"
            action="action_file_data_import_settings"
            web_icon="file_data_importer,static/description/icon.png"/>

    </data>
</odoo>