<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_import_data_object_form" model="ir.ui.view">
            <field name="name">Import Data Object Form</field>
            <field name="model">import.data.object</field>
            <field name="arch" type="xml">
                <form string="Define Parameters For Import">
                    <sheet>
                        <group>
                            <group string="Object Configuration">
                                <field name="model_id" required="True"/>
                                <field name="primary_key_ids" widget="many2many_tags"
                                       required="True"
                                       domain="[('model_id', '=', model_id)]"/>
                            </group>
                            <group string="Columns">
                                <field name="column_ids"
                                       context="{'default_model_id': model_id}">
                                    <tree>
                                        <field name="number" string="Column"
                                               attrs="{'readonly': [('is_from_default', '=', True)]}"/>
                                        <field name="field_id"/>
                                        <field name="odoo_default_value"/>
                                        <field name="is_from_default" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                            <group string="Child Objects To Import (Optional)">
                                <field name="child_ids" nolabel="1"
                                       context="{'default_parent_id': id}"/>
                            </group>
                            <group string="Relation Parent -> Child (Optional)">
                                <field name="parent_id"/>
                                <field name="rel_field_type"/>
                                <field name="rel_field_id"
                                       domain="[('model_id', '=', model_id)]"/>
                                <field name="ttype" invisible="1"/>
                                <field name="m2o_field_id"
                                       domain="[('model_id', '=', model_id)]"
                                       attrs="{'required': [('ttype', '=', 'one2many')]}"/>
                            </group>
                            <group string="Additional Settings (Optional)">
                                <field name="is_to_be_used_as_key"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_import_data_object_tree" model="ir.ui.view">
            <field name="name">Import Data Object Tree</field>
            <field name="model">import.data.object</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="model_id"/>
                    <field name="is_to_be_used_as_key" string="As Key"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
